<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Appxi</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="https://mystorage.loginweb.dev/storage/Projects/appxi/icon-512x512.png">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    </head>
    <body>
        <div id="map"></div>
        <div style="position:fixed;bottom:0px; width:100%">
            <div class="card">
                <div class="card-body" style="padding: 0px 20px;">
                    <div class="row">
                        <div class="col-xs-4">
                            <img id="userAvatar" src="" width="70px" alt="{{customer.name}}">
                        </div>
                        <div class="col-xs-8 ml-3 mt-3">
                            <h5 class="card-title">{{customer.name}}</h5>
                            <!--<p class="card-text">{{timeago created_at}}</p>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Google maps -->
        <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCfhTHyaCn2bXEKvT13E0YEutlQY1bmfoM&callback=initMap&libraries=&v=weekly" defer></script>
        <style type="text/css">
            /* Always set the map height explicitly to define the size of the div
            * element that contains the map. */
            #map {
                height: 90%;
            }
            /* Optional: Makes the sample page fill the window. */
            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
            }
        </style>
        <script>
            const latitude = {{location.latitude}};
            const longitude = {{location.longitude}};

            var lastLat, lastLng = null

            var map, infoWindow, origin;
            var currentLocation = { lat: -14.835473, lng: -64.904180 };
            var destination = { lat: latitude, lng: longitude };
            function initMap() {
                var directionsService = new google.maps.DirectionsService;
                var directionsDisplay = new google.maps.DirectionsRenderer;
                map = new google.maps.Map(document.getElementById("map"), {
                    center: currentLocation,
                    zoom: 15,
                });
                directionsDisplay.setMap(map);

                // Try HTML5 geolocation.
                if (navigator.geolocation) {
                    navigator.geolocation.watchPosition(function(position) {
                        origin = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude,
                        };
                        
                        directionsService.route({
                            origin, destination,
                            travelMode: 'DRIVING'
                        }, function(response, status) {
                            if (status === 'OK') {
                                directionsDisplay.setDirections(response);
                                console.log('directions');
                                updateLocation();
                            }
                        }); 

                    }, function(err) {
                        console.error(err);
                    }, {
                        enableHighAccuracy: true,
                        timeout: 1000,
                        maximumAge: 0
                    });
                } else {
                    // Browser doesn't support Geolocation
                    handleLocationError(false, infoWindow, map.getCenter());
                }
            }

            function updateLocation(){
                let id = '{{service.id}}'
                if(id){
                    if(lastLat != destination.lat || lastLng != destination.lng){
                        fetch(`/map/${id}/${destination.lat}/${destination.lng}`, {method: 'POST'});
                        lastLat = destination.lat;
                        lastLng = destination.lng;
                        console.log('update')
                    }
                }
            }

            function handleLocationError(browserHasGeolocation, infoWindow, pos) {
                infoWindow.setPosition(pos);
                infoWindow.setContent(
                    browserHasGeolocation
                    ? "Error: The Geolocation service failed."
                    : "Error: Your browser doesn't support geolocation."
                );
                infoWindow.open(map);
            }
        </script>
    </body>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function(){
            const defaultAvatar =  'https://mystorage.loginweb.dev/storage/Projects/appxi/1icon-512x512.png';
            const userAvatar = '{{customer.avatar}}'
            $('#userAvatar').attr('src', userAvatar ? userAvatar : defaultAvatar);
        });
    </script>
</html>